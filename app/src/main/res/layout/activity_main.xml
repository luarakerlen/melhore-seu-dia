<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnMainDesmotivade"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Desmotivade"
        android:textColor="@color/colorText"
        app:backgroundTint="@color/colorButton"
        app:layout_constraintEnd_toEndOf="@+id/btnMainFeliz"
        app:layout_constraintStart_toStartOf="@+id/btnMainFeliz"
        app:layout_constraintTop_toBottomOf="@+id/btnMainFeliz" />

    <TextView
        android:id="@+id/txvMain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/colorText"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/imgMainShare"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMainSemautoestima" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:text="Como você está se sentindo hoje?"
        android:textColor="@color/colorText"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnMainSemautoestima"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Sem autoestima"
        android:textColor="@color/colorText"
        app:backgroundTint="@color/colorButton"
        app:layout_constraintEnd_toEndOf="@+id/btnMainDesmotivade"
        app:layout_constraintStart_toStartOf="@+id/btnMainDesmotivade"
        app:layout_constraintTop_toBottomOf="@+id/btnMainDesmotivade" />

    <Button
        android:id="@+id/btnMainFeliz"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="Feliz"
        android:textColor="@color/colorText"
        app:backgroundTint="@color/colorButton"
        app:layout_constraintEnd_toStartOf="@+id/btnMainPrabaixo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/btnMainSemfoco"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sem foco"
        android:textColor="@color/colorText"
        app:backgroundTint="@color/colorButton"
        app:layout_constraintEnd_toEndOf="@+id/btnMainAnsiose"
        app:layout_constraintStart_toStartOf="@+id/btnMainAnsiose"
        app:layout_constraintTop_toTopOf="@+id/btnMainSemautoestima" />

    <Button
        android:id="@+id/btnMainAnsiose"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ansiose"
        android:textColor="@color/colorText"
        app:backgroundTint="@color/colorButton"
        app:layout_constraintEnd_toEndOf="@+id/btnMainPrabaixo"
        app:layout_constraintStart_toStartOf="@+id/btnMainPrabaixo"
        app:layout_constraintTop_toTopOf="@+id/btnMainDesmotivade" />

    <Button
        android:id="@+id/btnMainPrabaixo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="Pra baixo"
        android:textColor="@color/colorText"
        app:backgroundTint="@color/colorButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnMainFeliz"
        app:layout_constraintTop_toTopOf="@+id/btnMainFeliz" />

    <ImageView
        android:id="@+id/imgMainLike"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="@+id/imgMainShare"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgMainShare"
        app:srcCompat="@drawable/ic_outline_favorite_border_24" />

    <ImageView
        android:id="@+id/imgMainSave"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="@+id/imgMainShare"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgMainShare"
        app:srcCompat="@drawable/ic_outline_bookmark_border_24" />

    <ImageView
        android:id="@+id/imgMainShare"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginBottom="32dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txvMain"
        app:layout_constraintStart_toStartOf="@+id/txvMain"
        app:srcCompat="@drawable/ic_outline_share_24" /><![CDATA[

    "@drawable/ic_outline_favorite_border_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="506dp" />
]]>
</androidx.constraintlayout.widget.ConstraintLayout>